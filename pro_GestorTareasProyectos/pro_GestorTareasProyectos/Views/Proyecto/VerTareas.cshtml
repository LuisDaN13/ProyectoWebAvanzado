@{
    ViewData["Title"] = "VerTareas";
    Layout = "_Layout2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks and Projects</title>
    <link rel="stylesheet" href="styles.css">
    <style>

        .tasks-projects-section {
            display: flex;
            justify-content: space-between;
            margin: 20px 0;
        }

        .tasks, .teams {
    background-color: #fff;
    border-radius: 8px;
    padding: 20px;
    width: 48%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
    margin-top: 0;
}

.task-card, .team-card {
    background-color: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.task-details, .team-details {
    flex-grow: 1;
}

.task-status, .team-status, .task-due-date, .task-actions {
    margin-left: 15px;
}

.status {
    display: inline-block;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: bold;
}

.status.in-progress {
    background-color: #ffeb3b;
    color: #000;
}

.status.to-do {
    background-color: #ff5722;
    color: #fff;
}

.status.active {
    background-color: #4caf50;
    color: #fff;
}

.status.inactive {
    background-color: #9e9e9e;
    color: #fff;
}

.btn-primary {
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}

.btn-primary:hover {
    background-color: #555;
}
    </style>
</head>
<body style="background-color: #f0f0f0;">
    <div class="container">
    <main>
        <h2 style="padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);" class="text-4xl font-bold tracking-tighter">
            Proyecto:
        </h2>
        <section class="tasks-projects-section">
            <div class="tasks">
                <h2>Tasks</h2>
                <div class="task-card">
                    <div class="task-details">
                        <strong>Finish proposal</strong>
                        <br>
                        <span>Write up the proposal for the new project</span>
                    </div>
                    <div class="task-status">
                        <span class="status in-progress">In Progress</span>
                    </div>
                    <div class="task-due-date">
                        <span>April 15, 2023</span>
                    </div>
                    <div class="task-actions">
                        <span class="action">&#8644;</span>
                    </div>
                </div>
                <div class="task-card">
                    <div class="task-details">
                        <strong>Design new website</strong>
                        <br>
                        <span>Create the design for the company's new website</span>
                    </div>
                    <div class="task-status">
                        <span class="status in-progress">In Progress</span>
                    </div>
                    <div class="task-due-date">
                        <span>May 1, 2023</span>
                    </div>
                    <div class="task-actions">
                        <span class="action">&#8644;</span>
                    </div>
                </div>
                <div class="task-card">
                    <div class="task-details">
                        <strong>Prepare for meeting</strong>
                        <br>
                        <span>Gather materials and review agenda for the upcoming meeting</span>
                    </div>
                    <div class="task-status">
                        <span class="status to-do">To Do</span>
                    </div>
                    <div class="task-due-date">
                        <span>April 20, 2023</span>
                    </div>
                    <div class="task-actions">
                        <span class="action">&#8644;</span>
                    </div>
                </div>
                <button class="btn-primary">Add Task</button>
            </div>
            <div class="teams">
                <h2>Team Members</h2>
                <div class="team-card">
                    <div class="team-details">
                        <strong>John Doe</strong>
                        <br>
                        <span>Project Manager</span>
                    </div>
                    <div class="team-status">
                        <span class="status active">Active</span>
                    </div>
                </div>
                <div class="team-card">
                    <div class="team-details">
                        <strong>Jane Smith</strong>
                        <br>
                        <span>Lead Developer</span>
                    </div>
                    <div class="team-status">
                        <span class="status active">Active</span>
                    </div>
                </div>
                <div class="team-card">
                    <div class="team-details">
                        <strong>Mike Johnson</strong>
                        <br>
                        <span>UI/UX Designer</span>
                    </div>
                    <div class="team-status">
                        <span class="status inactive">Inactive</span>
                    </div>
                </div>
                <button class="btn-primary">Add Team Member</button>
            </div>
        </section>
    </main>
    </<div>
</body>
</html>
